From b10c8ec8ea39f9f1c2d38ca2e9fdf006b164ecb1 Mon Sep 17 00:00:00 2001
From: Tai Huynh <tai.huynh.cp@renesas.com>
Date: Wed, 3 Sep 2025 15:20:13 +0700
Subject: [PATCH] arm64: dts: renesas: r9a09g057: Add node and memory area for
 DRPB

Signed-off-by: Tai Huynh <tai.huynh.cp@renesas.com>
---
 arch/arm64/boot/dts/renesas/r9a09g057.dtsi        | 10 ++++++++++
 arch/arm64/boot/dts/renesas/rzv2h-evk-common.dtsi |  6 ++++++
 2 files changed, 16 insertions(+)

diff --git a/arch/arm64/boot/dts/renesas/r9a09g057.dtsi b/arch/arm64/boot/dts/renesas/r9a09g057.dtsi
index 1bb5169988092..233830ccead86 100644
--- a/arch/arm64/boot/dts/renesas/r9a09g057.dtsi
+++ b/arch/arm64/boot/dts/renesas/r9a09g057.dtsi
@@ -546,6 +546,16 @@ ostm7: timer@12c03000 {
 			status = "disabled";
 		};
 
+		drp1: drp1@18000000 {
+		        compatible = "renesas,rzv2h-drp";
+		        reg = <0 0x18000000 0 0x1000000>;
+		        interrupts = <GIC_SPI 912 IRQ_TYPE_LEVEL_HIGH>,
+		                    <GIC_SPI 913 IRQ_TYPE_LEVEL_HIGH>;
+		        //resets = <&cpg R9A09G057_DRP_ARESETN>;
+			resets = <&cpg 0xfc>;
+		        status = "disabled";
+		};
+
 		wdt0: watchdog@11c00400 {
 			compatible = "renesas,r9a09g057-wdt";
 			reg = <0 0x11c00400 0 0x400>;
diff --git a/arch/arm64/boot/dts/renesas/rzv2h-evk-common.dtsi b/arch/arm64/boot/dts/renesas/rzv2h-evk-common.dtsi
index 105f73665623a..30f0339c8468a 100644
--- a/arch/arm64/boot/dts/renesas/rzv2h-evk-common.dtsi
+++ b/arch/arm64/boot/dts/renesas/rzv2h-evk-common.dtsi
@@ -527,3 +527,9 @@ partition@2000000 {
 		};
 	};
 };
+
+&drp1 {
+	memory-region = <&drp_codec>;
+	memory-oca-region = <&opencva_reserved>;
+	status = "okay";
+};
